<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="rule"
            type="com.lostincontext.data.rules.Rule" />

        <variable
            name="callback"
            type="com.lostincontext.mainscreen.MainScreenViewHolder.Callback" />


    </data>

    <LinearLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:outlineProvider="bounds"
        android:stateListAnimator="@animator/lift_on_touch">


        <RelativeLayout
            android:id="@+id/text_background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@color/playlist_text_default_background">


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_title"
                style="@style/itemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:lines="1"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="@{rule.name}"
                tools:text="rule name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_title"
                android:layout_marginTop="5dp"
                android:paddingStart="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/ic_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/ic_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher" />


            </LinearLayout>

        </RelativeLayout>

        <com.lostincontext.commons.widget.SquareImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:onClick="@{() -> callback.onPlaylistCoverClick(rule.playlist)}" />

    </LinearLayout>
</layout>