<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="callback"
            type="com.lostincontext.rulescreation.display.RuleCreationItemCallback" />

        <variable
            name="item"
            type="com.lostincontext.data.GridBottomSheetItem" />

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> callback.onGridBottomSheetItemClick(item)}"
        android:background="?selectableItemBackground"
        >


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:outlineProvider="background"
            android:tint="#757575"
            app:resource="@{item.drawableRes}"
            tools:src="@drawable/ic_run_24" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="@{item.name}"
            tools:text="description" />

    </RelativeLayout>


</layout>