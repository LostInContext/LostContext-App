<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RuleDetailsTheme" parent="AppTheme">
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

    <style name="ActionButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless" />

    <style name="itemTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="itemInfo" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
    </style>


    <declare-styleable name="LostRadioButton">

        <attr name="src" format="reference" />
        <attr name="selected_color" format="color" />
    </declare-styleable>
</resources>
